html
    box-sizing: border-box
    height: 100%
    m-font-size($base-font-size)

    +m-breakpoint(sm md)
        m-font-size(14)

*,
*:before,
*:after
    box-sizing: inherit

body
    color: $base-font-color
    font-family: $base-font-family
    m-font-size($base-font-size)
    height: 100%
    margin: 0
    min-height: 600px
    // overflow: hidden
    padding: 0

    +m-breakpoint(landscape)
        min-height: 100%
        overflow: hidden

ul,
li
    list-style-type: none
    margin: 0
    padding: 0

img
    border: none
    max-width: 100%

h1,
h2,
h3,
h4,
h5,
p
    margin: 0

a
    color: $primary-theme-color

#app
    display: flex
    flex-direction: column

#loader
    background-color: $primary-theme-color
    background-image: url("../../static/images/logo.png")
    background-position: center
    background-repeat: no-repeat
    background-size: 200px
    display: flex
    flex-direction: column
    height: 100%
    left: 0
    position: fixed
    top: 0
    transition: opacity 0.5s ease-out
    width: 100%
    z-index: 1501

#app
  display flex
  width 100%
  height 100%